# Apache configuration for Next.js Static Export on cPanel
# DISABLE ALL CACHING to fix Sucuri CDN issues

# ==================================================
# SECTION 1: DISABLE CACHING COMPLETELY
# ==================================================
<IfModule mod_headers.c>
  # Disable caching for ALL files
  Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
  Header set Pragma "no-cache"
  Header set Expires "0"
  
  # Tell CDN/Proxy not to cache
  Header set X-Sucuri-Cache-Control "off"
  Header set Surrogate-Control "no-store"
  Header set CDN-Cache-Control "no-store"
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive Off
</IfModule>

# ==================================================
# SECTION 2: SET CORRECT MIME TYPES
# ==================================================
<IfModule mod_mime.c>
  AddType application/javascript .js .mjs
  AddType text/css .css
  AddType image/svg+xml .svg
  AddType image/webp .webp
  AddType application/json .json
  AddType font/woff2 .woff2
  AddType font/woff .woff
</IfModule>

# ==================================================
# SECTION 3: SPA ROUTING (Client-side routing)
# ==================================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # IMPORTANT: Do NOT rewrite _next folder - serve static files directly
  RewriteCond %{REQUEST_URI} ^/_next/
  RewriteRule ^ - [L]
  
  # Do NOT rewrite if file or directory exists
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Do NOT rewrite static file extensions
  RewriteCond %{REQUEST_URI} !\.(js|css|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2|json|txt|xml)$
  
  # Fallback to index.html for SPA routing
  RewriteRule ^ index.html [L]
</IfModule>

# ==================================================
# SECTION 4: ENABLE GZIP COMPRESSION
# ==================================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
  AddOutputFilterByType DEFLATE application/javascript application/json
</IfModule>

# ==================================================
# SECTION 5: SECURITY HEADERS
# ==================================================
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>
