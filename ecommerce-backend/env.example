# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=ecommerce_db
DB_USER=root
DB_PASSWORD=rootpassword

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=8h

# Server Configuration
NODE_PORT=3001
PHP_PORT=9000
GATEWAY_PORT=80

# Environment
NODE_ENV=development

# CORS (only enable Node CORS when not using the gateway)
# Socket.IO will allow both frontend (3000) and admin panel (3002) by default in development
ENABLE_NODE_CORS=false
# For multiple origins, use comma-separated: http://localhost:3000,http://localhost:3002
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
