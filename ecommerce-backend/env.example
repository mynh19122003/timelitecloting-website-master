# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=ecommerce_db
DB_USER=root
DB_PASSWORD=rootpassword

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=8h

# Admin API security
# Set ADMIN_API_TOKEN for securing POST /admin/* endpoints in production
# When testing locally, you can disable the token check by setting DISABLE_ADMIN_TOKEN=true
ADMIN_API_TOKEN=
DISABLE_ADMIN_TOKEN=false

# Server Configuration
NODE_PORT=3001
PHP_PORT=9000
GATEWAY_PORT=80

# Environment
NODE_ENV=development

# Contact form email (SMTP)
CONTACT_SMTP_HOST=
CONTACT_SMTP_PORT=587
CONTACT_SMTP_SECURE=false
CONTACT_SMTP_USER=
CONTACT_SMTP_PASS=
CONTACT_FROM_EMAIL=
CONTACT_TO_EMAIL=henry@timeliteclothing.com

# CORS (only enable Node CORS when not using the gateway)
ENABLE_NODE_CORS=false
# For multiple origins, use comma-separated: http://localhost:3000,http://localhost:3002,https://api.timeliteclothing.com
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,https://timeliteclothing.com,https://www.timeliteclothing.com,https://api.timeliteclothing.com

# Frontend URL (for reset password and email verification links)
# Development: http://localhost:3000
# Production: https://timeliteclothing.com or https://www.timeliteclothing.com
FRONTEND_URL=http://localhost:3000

# Testing
# Set to true/1 to tạm thời tắt rate limit khi test đăng nhập Admin
DISABLE_RATE_LIMIT=false